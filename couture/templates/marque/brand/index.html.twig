{% extends 'marque/layout.html.twig' %}

{% block title %}Liste de vos marques{% endblock %}

{% block content %}
    <div class="row"><i class="fas fa-list-alt fa-3x mr-3"></i><h1>Vos marques de couture</h1></div>
    {% for brand in pagination.data %}
        <div class="row p-3 text-center text-light bg-primary h4">{{ brand }}</div>
        <div class="row my-2 mx-auto">
            <div class="card text-center mx-2 p-0 col-3">
                <div class="card-header bg-dark"></div>
                <div class="card-body">
                    <span class="card-text"><strong>Lien</strong> : <a href="{{ brand.url }}" target="_blank">Votre site</a></span>
                    <div class="dropdown-divider"></div>
                    <span class="card-text"><strong>Nombre de patrons</strong> : {{ brand.patterns | length }}</span>
                    <a href="{{ path('marque_pattern') }}" class="btn btn-outline-dark btn-block mt-2">Voir</a>
                    <div class="dropdown-divider"></div>
                    <span class="card-text">{{ brand.description | raw }}</span>
                </div>
            </div>
            <div class="card text-center mx-2 p-0 col-6">
                <div class="card-header">
                    <img src="/uploads/brand_images/{{ brand.image }}" alt="{{ brand }}-image" class="img-fluid" />
                </div>
            </div>
            <div class="col-2 d-flex flex-column">
                <a href="{{ path('marque_brand_edit', {'id': brand.id }) }}" class="btn btn-outline-primary">
                    <div class="row">
                        <div class="col-2 offset-1"><i class="fas fa-edit"></i></div>
                        <div class="col-4 offset-1">Editer</div>
                    </div>
                </a>
                <a href="{{ path('marque_brand_delete', {'id': brand.id }) }}" class="btn btn-outline-danger">
                    <div class="row">
                        <div class="col-2 offset-1"><i class="fas fa-trash"></i></div>
                        <div class="col-4 offset-1">Supprimer</div>
                    </div>
                </a>
            </div>
        </div>
    {% endfor %}
    {{ pagination.display }}
{% endblock %}
