{% extends 'bo_partials/layout.html.twig' %}

{% block title %}Modifier votre marque de patron de couture {{ brand }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row"><i class="fas fa-plus-circle fa-3x mr-3"></i><h1>Modifier votre marque de patron de couture : {{ brand }}</h1></div>
        <div class="my-3">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.url) }}
            {{ form_row(form.imageFile) }}
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg">Editer votre marque</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('upload') }}
{% endblock %}