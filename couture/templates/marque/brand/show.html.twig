{% extends 'marque/layout.html.twig' %}

{% block title %}Page de la marque de couture {{ brand }}{% endblock %}

{% block content %}
    <div class="container-fluid my-2">
        <div class="row"><i class="fas fa-eye fa-3x mr-3"></i><h1>Votre marque : {{ brand }}</h1></div>
        <div class="row my-3">
            <a href="{{ path('marque_brand_edit', {'id': brand.id }) }}" class="btn btn-dark col-6">
                <div class="row">
                    <div class="col-2 offset-1"><i class="fas fa-edit"></i></div>
                    <div class="col-4 offset-1">Editer</div>
                </div>
            </a>
            <a href="{{ path('marque_brand_delete', {'id': brand.id }) }}" class="btn btn-dark col-6">
                <div class="row">
                    <div class="col-2 offset-1"><i class="fas fa-trash"></i></div>
                    <div class="col-4 offset-1">Supprimer</div>
                </div>
            </a>
        </div>
        <div class="my-3">
            <div class="row">
                <div class="col-6">

                </div>
                <div class="col-6">
                    <div class="card text-center mx-2 p-0">
                        <div class="card-header">
                            <img src="/uploads/brand_images/{{ brand.image }}" alt="{{ brand }}-image" class="img-fluid" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}