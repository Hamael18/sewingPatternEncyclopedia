{% extends 'bo_partials/layout.html.twig' %}

{% block title %}Liste des langues de patrons de couture{% endblock %}

{% block content %}
    <div class="row teal-text darken-4 mb-5"><h3>Langues disponibles</h3></div>
    <div class="my-3">
        <table class="table table-hover table-striped">
            <thead class="teal lighten-4 h5">
            <tr>
                <th class="align-middle col-1">
                    <a href="{{ path('admin_language_new') }}" class="btn waves-effect waves-light"><i class="fas fa-plus"></i></a>
                </th>
                <th class="align-middle">Nom</th>
                <th class="align-middle">Patron(s)</th>
                <th class="col-2 align-middle"></th>
            </tr>
            </thead>
            <tbody>
            {% for language in data %}
                <tr>
                    <td class="align-middle"></td>
                    <td class="align-middle font-weight-bold h5">{{ language }}</td>
                    <td class="align-middle">{{ language.patterns | length }}</td>
                    <td class="align-middle">
                        <a href="{{ path('admin_language_edit', {'id': language.id}) }}" class="btn teal lighten-4 teal-text text-darken-2"><i class="fas fa-wrench"></i></a>
                        {% if language.canBeDeleted %}
                            <a href="{{ path('admin_language_delete', {'id': language.id }) }}"
                               onclick="return confirm('Supprimer cette langue ?')"
                               class="btn btn-flat grey-text text-lighten-1"><i class="fa fa-trash"></i></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display }}
    </div>
{% endblock %}
