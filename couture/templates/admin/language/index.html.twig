{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des langues de patrons de couture{% endblock %}

{% block content %}
    <div class="row"><i class="fas fa-list-alt fa-3x mr-3"></i><h1>Liste des langues des patrons de couture</h1></div>
    <div class="my-3">
        <table class="table table-hover table-striped">
            <thead class="thead-dark h5">
            <tr>
                <th class="align-middle col-1">
                    <a href="{{ path('admin_language_new') }}" class="btn btn-success"><i class="fas fa-plus"></i></a>
                </th>
                <th class="align-middle">Nom</th>
                <th class="align-middle">Patron(s)</th>
                <th class="col-2 align-middle"></th>
            </tr>
            </thead>
            <tbody>
            {% for language in pagination.data %}
                <tr>
                    <td class="align-middle"></td>
                    <td class="align-middle font-weight-bold h5">{{ language }}</td>
                    <td class="align-middle">{{ language.patterns | length }}</td>
                    <td class="align-middle">
                        <a href="{{ path('admin_language_edit', {'id': language.id}) }}" class="btn btn-outline-primary"><i class="fas fa-wrench"></i></a>
                        {% if language.canBeDeleted %}
                            <a href="{{ path('admin_language_delete', {'id': language.id }) }}"
                               onclick="return confirm('Supprimer cette langue ?')"
                               class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display }}
    </div>
{% endblock %}
