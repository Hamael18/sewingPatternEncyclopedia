{% extends 'bo_partials/layout.html.twig' %}

{% block title %}Marques de patrons de couture{% endblock %}

{% block content %}
    <div class="row teal-text darken-4 mb-5"><h3>Liste des marques de couture</h3></div>
    <div class="my-3">
        <table class="table table-hover table-striped">
            <thead class="teal lighten-4 h5">
            <tr>
                <th class="align-middle col-1">
                    <a href="{{ path('admin_brand_new') }}" class="btn waves-effect waves-light"><i class="fas fa-plus"></i></a>
                </th>
                <th class="align-middle">Nom</th>
                <th class="align-middle">Propriétaire</th>
                <th class="align-middle">Patrons de couture</th>
                <th class="col-2 align-middle"></th>
            </tr>
            </thead>
            <tbody>
            {% for brand in data %}
                <tr>
                    <td class="align-middle"></td>
                    <td class="align-middle font-weight-bold h5"><a href="#"> {{ brand.name }} </a></td>
                    <td class="align-middle">{{ brand.owner }}</td>
                    <td class="align-middle">{{ brand.patterns | length }}</td>
                    <td class="align-middle">
                        <a href="{{ path('admin_brand_addOwner', {'id': brand.id}) }}" class="btn teal lighten-4 teal-text text-darken-2" title="Ajouter un propriétaire"><i class="fas fa-user-tie"></i></a>
                        <a href="{{ path('admin_brand_edit', {'id': brand.id}) }}" class="btn teal lighten-4 teal-text text-darken-2"><i class="fas fa-wrench"></i></a>
                        {% if brand.canBeDeleted %}
                            <a href="{{ path('admin_brand_delete', {'id': brand.id }) }}"
                               onclick="return confirm('Supprimer cette marque ?')"
                               class="btn btn-flat grey-text text-lighten-1"><i class="fa fa-trash"></i></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display }}
    </div>
{% endblock %}
