{% extends 'bo_partials/layout.html.twig' %}

{% block title %}Liste des versions{% endblock %}

{% block content %}
    <div class="row"><i class="fas fa-list-alt fa-3x mr-3"></i><h1>Liste des versions</h1></div>
    <div class="my-3">
        <table class="table table-hover table-striped">
            <thead class="thead-dark h5">
            <tr>
                <th class="align-middle">Nom</th>
                <th class="align-middle">Patron</th>
                <th class="col-2 align-middle"></th>
            </tr>
            </thead>
            <tbody>
            {% for version in pagination.data %}
                <tr>
                    <td class="align-middle font-weight-bold h5"><a href="{{ path('admin_version_show', {'id': version.id}) }}">{{ version.name }}</a></td>
                    <td class="align-middle">{{ version.pattern }}</td>
                    <td class="align-middle">
                        <a href="{{ path('admin_version_edit', {'id': version.id}) }}" class="btn btn-outline-primary"><i class="fas fa-wrench"></i></a>
                        {% if version.canBeDeleted %}
                            <a href="{{ path('admin_version_delete', {'id': version.id }) }}"
                               onclick="return confirm('Supprimer cette version ?')"
                               class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display }}
    </div>
{% endblock %}